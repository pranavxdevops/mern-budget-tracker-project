version: "3.9"

services:
  backend:
    image: ${BACKEND_IMAGE}:${IMAGE_TAG}
    container_name: budget-backend
    ports:
      - "5000:5000"
    env_file:
      - ./backend/.env
    restart: always

  frontend:
    image: ${FRONTEND_IMAGE}:${IMAGE_TAG}
    container_name: budget-frontend
    ports:
      - "80:80"
    depends_on:
      - backend
    restart: always
